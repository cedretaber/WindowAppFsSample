<Window
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Title="MainWindow" Height="350" Width="525">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
      <ColumnDefinition />
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition />
    </Grid.RowDefinitions>
    <TextBox x:Name="numberX" Grid.Column="0">0</TextBox>
    <TextBlock Grid.Column="1"> + </TextBlock>
    <TextBox x:Name="numberY" Grid.Column="2">0</TextBox>
    <TextBlock Grid.Column="3"> = </TextBlock>
    <TextBlock x:Name="numberZ" Grid.Column="4">0</TextBlock>
  </Grid>
</Window>